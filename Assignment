print("You are in a room with 3 doors.")
print("You have to choose one.")
door = int(input("Choose one door: "))
if door == 1:
    print("You Lose")
elif door == 2:
    print("You are in another room")
    print("Choose one door (1 or 2): ")
    if door == 1:
        print("You Win")
    elif door == 2:
        print("You Lose")
    else:
        print("You did not enter 1 or 2")
elif door == 3:
    print("You Win")
elif door == 4:
    print("You Have to guess a random number from 1 to 3")
    number = int(input("Enter your number"))
    if number == 1:
        print("You Lose")
    elif number == 2:
        print("You Win")
    elif number == 3:
        print("Yoou Lose")
    else:
        print("You did not enter 1, 2 or 3")
else:
    print("You did not enter 1, 2, 3 or 4")
